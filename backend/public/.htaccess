DirectoryIndex index.html index.php

RewriteEngine On
RewriteBase /

# Let real files/dirs through (assets, real PHP files, etc.)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Pretty API routes
RewriteRule ^api/([A-Za-z0-9_-]+)$ api/$1.php [L,QSA]
RewriteRule ^doctor_api/([A-Za-z0-9_-]+)$ doctor_api/$1.php [L,QSA]

# SPA fallback: everything else â†’ index.html
RewriteRule ^ index.html [L]

