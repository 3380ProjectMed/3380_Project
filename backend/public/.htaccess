# /home/site/wwwroot/.htaccess
RewriteEngine On

# Serve real files/dirs as-is
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Keep API/PHP endpoints out of SPA fallback
RewriteRule ^api/(.*)$ api/$1 [L,QSA]
RewriteRule ^doctor_api/(.*)$ doctor_api/$1 [L,QSA]
RewriteRule ^patient_api/(.*)$ patient_api/$1 [L,QSA]

# Everything else -> React SPA
RewriteRule ^ index.html [L]
