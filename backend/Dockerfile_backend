FROM php:8.4-fpm-bookworm

# System dependencies (pdo_mysql needs default-mysql-client for cli tools optionally)
RUN apt-get update && apt-get install -y --no-install-recommends \
  git unzip libzip-dev libpng-dev libonig-dev libxml2-dev mariadb-client \
  && rm -rf /var/lib/apt/lists/*

# PHP extensions
RUN docker-php-ext-install pdo_mysql mysqli opcache

WORKDIR /var/www/html

# Copy app (in compose we bind-mount; this is here for image builds if you prefer)
# COPY . /var/www/html

# Tune PHP-FPM a bit (optional)
RUN { \
  echo "pm = dynamic"; \
  echo "pm.max_children = 10"; \
  echo "pm.start_servers = 2"; \
  echo "pm.min_spare_servers = 1"; \
  echo "pm.max_spare_servers = 5"; \
  } > /usr/local/etc/php-fpm.d/zz-docker.conf

EXPOSE 9000
CMD ["php-fpm"]
